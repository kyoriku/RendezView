<div class="welcome-banner">
  <div>
    <h1 class="upcoming-text text-center">Welcome, {{username}}!</h1>
  </div>
</div>
<div class="event-holder">
  <div class="row m-4 profile-events">
    <div class="col-md-6 mt-2 create-event">
      <h3 class="mb-4">Create a New Event:</h3>
      <form class="form new-event-form">
        <div class="mb-2">
          <label for="event-name" class="form-label">Event name: <span class="required">*</span></label>
          <input class="form-control event-input" type="text" id="event-name" name="event-name" maxlength="50"
            placeholder="Enter the name of your event (maximum 50 characters)" required />
        </div>
        <div class="form-group mb-2">
          <label for="event-description" class="form-label">Description: <span class="required">*</span></label>
          <textarea maxlength="250" class="form-control event-input" type="text" id="event-description"
            name="event-description" rows="4" placeholder="Describe the event in detail (maximum 250 characters)"
            required></textarea>
        </div>
        <div class="mb-2">
          <label for="event-date" class="form-label">Date: <span class="required">*</span></label>
          <input class="form-control event-input" type="datetime-local" id="event-date" name="event-date" required />
        </div>
        <div class="mb-2">
          <label for="event-address" class="form-label">Venue: <span class="required">*</span></label>
          <input class="form-control event-input" type="text" id="event-address" name="event-address" maxlength="100"
            placeholder="Enter an address, venue, or location name (maximum 100 characters)" required />
        </div>
        <div class="mt-3">
          <button type="submit" class="btn btn-primary btn-dark create-btn">Create</button>
        </div>
      </form>
    </div>
    <div class="col-md-6 event-list mt-2">
      <h3>My Events:</h3>
      {{#if events.length}}
      {{#each events as |event|}}
      <div class="row mt-4">
        <div class="col-md-8">
          <h4><a href="/event/{{event.id}}" class="profile-event-name">{{event.name}}</a></h4>
          <p><span>Date:</span> {{format_date event.date}} <span>&#8226;</span> {{format_time event.date}}</p>
          <p>{{event.description}}</p>
        </div>
        <div class="col-md-4">
          <button class="btn btn-primary btn-dark update-btn" data-id="{{event.id}}"
            id="updateEventButton">Edit</button>
          <button class="btn btn-primary btn-dark delete-btn" data-id="{{event.id}}">Delete</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{else}}
    <p class="my-4">No created events</p>
    {{/if}}
  </div>
</div>
<!-- JavaScript file for handling the create & delete event functionality -->
<script src="./js/dashboard.js"></script>