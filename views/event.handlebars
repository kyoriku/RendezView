<body>
  {{#if events.length}}
  <div class="events-banner">    
    <div>
      <h1 class="upcoming-text">Upcoming Events</h1>
    </div>
  </div>
  {{!-- {{#if events.length}} --}}
  <div class="row gx-2 event-list all-event">
    {{#each events as |event|}}
    <div class="col-md-4">
      <div class="event-card">
        <a href="/event/{{event.id}}">
            <h4 class="event-name">{{event.name}}</h4>
            <p>{{event.description}}</p>
            <p>Date: {{format_date event.date}} {{format_time event.date}}</p>
        </a>
      </div>  
    </div>
    {{/each}}
  </div>
  {{/if}}

  <!-- Event details -->
  {{#if showDetails}}
  <div class="indv-banner"> 
    <div>
      <h1 class="upcoming-text">{{name}}</h1>
    </div>
  </div>
  <div class="row mb-2 all-event">
    <div class="col-md-6">
      Google Map API
    </div>
    <div class="col-md-6">
      <div class="event-info">
        <p class="event-head" >{{description}}</p>
        <p class="event-head"><span>Date:</span> {{format_date date}} {{format_time date}}</p>
        <p class="event-head"><span>Venue:</span> {{venue.name}}</p>
      </div>
  </div>
  <div class="row mb-2"></div>
      <!-- List of attendees -->
      <h4>Attendees:</h4>
      <ul>
        {{#each rsvps}}
        <li>{{user.username}}</li>
        <li>John Doe</li>
        <li>Jane Smith</li>
        <li>Michael Johnson</li>
        <li>Alice Williams</li>
        <li>Robert Brown</li>
        <li>Emily Davis</li>
        <li>Christopher Taylor</li>
        <li>Olivia Anderson</li>
        <li>William Miller</li>
        <li>Sophia Wilson</li>
        {{/each}}
      </ul>
    </div>
  </div>
  <!-- RSVP button -->
  <div class="rsvp-btn">
    <form action="/event/{{id}}/rsvp" method="POST">
      <button type="submit" class="btn btn-primary btn-dark homepage-btn">RSVP</button>
    </form>
  </div>
  {{/if}}

