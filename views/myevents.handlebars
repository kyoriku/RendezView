<div class="myevents-header">
  <h1 class="myevents-header-text">My Events</h1>
</div>
<div class="event-holder">
  <div class="myevents-subheading">
    <h2>RSVP'd Events</h2>
  </div>
  {{#if rsvpEvents.length}}
  <ul class="myevents-list">
    {{#each rsvpEvents}}
    <li class="myevent-listing">
      <a href="/event/{{this.id}}">
        <div class="event-card" id="myevents-card">
          <p class="myevents-card-title">{{this.name}}</p> 
          <p class="myevents-card-description" id="myevents-card-host">Hosted by: {{this.user.username}}</p>
          <p class="myevents-card-description">{{this.description}}</p>
        </div>
      </a>
    </li>
    {{/each}}
  </ul>
  {{else}}
  <p>No RSVP'd events</p>
  {{/if}}

  <div class="myevents-subheading">
    <h2>Created Events</h2>
  </div>
  {{#if createdEvents.length}}
  <ul class="myevents-list">
    {{#each createdEvents}}
    <li class="myevent-listing">
      {{#if this.event}}
      <a href="/event/{{this.event.id}}">
        <div class="event-card" id="myevents-card">
          <p class="myevents-card-title">{{this.event.name}}</p> by
          {{this.user.username}}
          <p class="myevents-card-description">{{this.event.description}}</p>
        </div>
      </a>
      {{else}}
      <a href="/event/{{this.id}}">
        <div class="event-card" id="myevents-card">
          <p class="myevents-card-title">{{this.name}}</p> by {{this.user.username}}
          <p class="myevents-card-description">{{this.description}}</p>
        </div>
      </a>
      {{/if}}
    </li>
    {{/each}}
  </ul>
  {{else}}
  <p>No created events</p>
  {{/if}}
</div>